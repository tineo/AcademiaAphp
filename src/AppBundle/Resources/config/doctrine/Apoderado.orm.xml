<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Apoderado" table="apoderado">
    <id name="idapoderado" type="integer" column="idapoderado">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="idpersona" type="integer" column="idpersona" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="idalumno" type="integer" column="idalumno" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="telefono" type="string" column="telefono" length="15" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="afinidad" type="string" column="afinidad" length="15" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="email" type="string" column="email" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
